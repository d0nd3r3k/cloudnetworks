extends ../layouts/default

block main
  h1= title

block content
  .row
    .offset1.span5
      ul.oAuth
        li
          a.zocial.facebook(href="/auth/facebook") Sign in with Facebook
        li
          a.zocial.twitter(href="/auth/twitter") Sign in with Twitter
        li
          a.zocial.github(href="/auth/github") Sign in with Github
        
    .span6
      if (typeof errors !== 'undefined')
        .fade.in.alert.alert-block.alert-error
          a.close(data-dismiss="alert", href="javascript:void(0)") x
          ul
            each error in errors
              li= error.type

      block auth
